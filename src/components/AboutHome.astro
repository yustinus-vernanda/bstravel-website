---

import about1 from '../assets/about1.png';
import about2 from '../assets/about2.png';
import about3 from '../assets/about3.png';

export interface Props {
  title?: string;
  text?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const { 
  title = "Tentang Kami",
  text = "Kami adalah penyedia layanan sewa mobil dan travel yang berdedikasi untuk memberikan solusi perjalanan terbaik di seluruh Indonesia. Dengan armada terbaru, driver profesional, dan komitmen pada kepuasan pelanggan, kami memastikan setiap perjalanan Anda aman, nyaman, dan tak terlupakan. Kami percaya bahwa setiap destinasi layak dinikmati sepenuhnya, dan kami hadir untuk mewujudkannya.",
  imageSrc = "/images/about-us-placeholder.jpg",
  imageAlt = "Foto tim kami" 
} = Astro.props;
---

<main class="isolate">
  {/* Hero section */}
  <div class="relative isolate -z-10 bg-gray-900">
    <div
    class="absolute left-1/2 right-0 top-0 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48"
      aria-hidden="true"
    >
      <div
      class="aspect-[801/1036] w-[50.0625rem] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
        style={{
          clipPath:
            'polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)',
        }}
      />
    </div>
    <div class="overflow-hidden">
      <div class="mx-auto max-w-7xl mb-20 px-6 pb-8 pt-8 sm:pt-60 lg:px-8 lg:pt-8">
        <div class="mx-auto max-w-2xl gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center">
          <div class="w-full max-w-xl lg:shrink-0 xl:max-w-2xl">
            <h1 class="text-3xl font-bold tracking-tight text-orange-500 sm:text-6xl">
              <span class="text-orange-500">Tentang</span> Kami
            </h1>
            <p class="relative mt-6 text-lg leading-8 text-gray-200 sm:max-w-md lg:max-w-none">
              <span class="text-orange-500 font-bold">BS Trans</span> bukan hanya menyediakan kendaraan; Kami adalah penyedia <span class="text-orange-500 font-bold">mobilitas Anda</span>. Kami mengelola detail perjalanan sehingga Anda dapat fokus pada hal yang benar-benar pentingâ€”<span class="text-orange-500 font-bold">momen, pengalaman, dan tujuan Anda</span>.
            </p>
          </div>
          <div class="mt-0 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0">
            <div class="ml-auto w-50 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-none xl:pt-40">
              <div class="relative">
                <img
                  src={about1.src}
                  alt=""
                  class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10" />
              </div>
            </div>
            <div class="mr-auto w-50 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-12">
              <div class="relative">
                <img
                  src={about2.src}
                  alt=""
                  class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10" />
              </div>
              <div class="relative">
                <img
                  src={about3.src}
                  alt=""
                  class="aspect-[2/3] w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-inset ring-gray-900/10" />
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>