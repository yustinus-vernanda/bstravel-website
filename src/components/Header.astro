---
import HeaderLink from './HeaderLink.astro';
import logo from '../assets/logo.png';
---
<header id="main-header" class="fixed inset-x-0 top-0 z-50 transition-colors duration-300">
	<nav aria-label="Global" class="flex items-center justify-between p-6 lg:px-8">
	  <div class="flex lg:flex-1">
		<a href="#" class="-m-1.5 p-1.5 z-9999">
		  <span class="sr-only">BS Trans</span>
		  <img src={logo.src} alt="BS TRANS" class="h-8 w-auto" />
		</a>
	  </div>
	  <div class="flex lg:hidden">
		<button type="button" data-command="show-modal" data-commandFor="mobile-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-orange-500 z-9999">
		  <span class="sr-only">Open main menu</span>
		  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-10">
			<path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
		  </svg>
		</button>
	  </div>
	  <div class="hidden lg:flex lg:gap-x-12">
		<HeaderLink href="/" class="text-xl/6 font-bold text-orange-500">Beranda</HeaderLink>
		<HeaderLink href="/armada" class="text-xl/6 font-bold text-orange-500">Armada</HeaderLink>
		<HeaderLink href="/galery" class="text-xl/6 font-bold text-orange-500">Galery</HeaderLink>
		<HeaderLink href="/kontak" class="text-xl/6 font-bold text-orange-500">Kontak</HeaderLink>
	  </div>
	  <div class="hidden lg:flex lg:flex-1 lg:justify-end">
		<a 
		  href="https://wa.me/6281212508898" 
		  target="_blank" 
		  class="bg-orange-500 text-white font-semibold py-1 px-5 rounded-md hover:bg-orange-300 transition-colors hidden md:block inline-flex items-center gap-2"
		>
		<span class="inline-flex items-center gap-2">
		  <svg 
			class="h-6 w-6" 
			fill="currentColor" 
			viewBox="0 0 448 512" 
			xmlns="http://www.w3.org/2000/svg"
		  >
			<path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"></path>
		  </svg>    
		  <span class="text-base">WhatsApp</span>
		</span>
		</a>
	  </div>
	</nav>

	<el-dialog>
	  <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
		<div tabindex="0" class="fixed inset-0 focus:outline-none">
		  <el-dialog-panel class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-black p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-100/10">
			<div class="flex items-center justify-between">
			  <a href="#" class="-m-1.5 p-1.5">
				<span class="sr-only">BS Trans</span>
				<img src={logo.src} alt="" class="h-8 w-auto" />
			  </a>
			  <button type="button" command="close" commandfor="mobile-menu" class="-m-2.5 rounded-md p-2.5 text-orange-500">
				<span class="sr-only">Close menu</span>
				<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
				  <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
				</svg>
			  </button>
			</div>
			<div class="mt-6 flow-root">
			  <div class="-my-6 divide-y-3 divide-white">
				<div class="space-y-2 py-6">
				  <HeaderLink href="/" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-orange-500 hover:bg-white/15">Beranda</HeaderLink>
				  <HeaderLink href="/armada" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-orange-500 hover:bg-white/15">Armada</HeaderLink>
				  <HeaderLink href="/galery" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-orange-500 hover:bg-white/15">Galery</HeaderLink>
				  <HeaderLink href="/kontak" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-orange-500 hover:bg-white/15">Kontak</HeaderLink>
				</div>
				<div class="py-6">
				  <a href="#" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-green-400 hover:bg-white/15">
					<span class="inline-flex items-center gap-2">
						<span>WhatsApp</span>
						<svg 
						  class="h-6 w-6" 
						  fill="currentColor" 
						  viewBox="0 0 448 512" 
						  xmlns="http://www.w3.org/2000/svg"
						>
						  <path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7.9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"></path>
						</svg> 
					</span>
				  </a>
				</div>
			  </div>
			</div>
		  </el-dialog-panel>
		</div>
	  </dialog>
	</el-dialog>

  </header>

  <script>
	window.addEventListener('scroll', () => {
	  const header = document.getElementById('main-header');
	  if (window.scrollY > 50) {
		// Styles for the scrolled state
		header.classList.add('bg-black/80', 'shadow-md');
	  } else {
		// Reset to initial transparent state
		header.classList.remove('bg-black/80', 'shadow-md');
	  }
	});
  </script>